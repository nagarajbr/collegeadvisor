<%= simple_form_for @event, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :title , label: "Activity Type", as: :select, collection: [['Job Search','Job Search'], ['Work Experience','Work Experience'], ['Career & Technical Training','Career & Technical Training']] ,selected: 'Job Search' %>
    <%= f.input :date_range, label: "Activity Period" , input_html: { class: "form-control input-sm date-range-picker" } %>
    <%= f.input :name , label: "Work Site Name" %>
    <%= f.input :contact , label: "Person Contacted" %>
    <%= f.input :hours , label: "Hours Spent" %>
    <%= f.input :occupation_program , label: "Occupation"  %>
    <%= f.input :position_major , label: "Position"  %>
    <%= f.input :outcome , label: "Outcome" %>
    <%= f.association :resource , as: :hidden, value: 1 %>
    <%= f.input_field :start, as: :hidden, value: '', class: 'form-control input-sm start_hidden' %>
    <%= f.input_field :end, as: :hidden, value: '', class: 'form-control input-sm end_hidden' %>
    <%= f.input :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']] %>
  </div>

  <div class="form-actions">
    <%#= f.button  :submit , ( f.object.new_record? ? "Create" : "Update") %>
    <% if f.object.new_record?  %>
    <%= f.button  :submit  , "Create" %>
    <% end %>
    <%= link_to 'Delete',
                event,
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' },
                remote: true unless @event.new_record? %>
  </div>
<% end %>
