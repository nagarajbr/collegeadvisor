<div class="page-header">

  <h1>Assessements for : <%= get_student_name(session[:student]) %> </h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Assessement taken on</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% if @student_assessements.present? %>
      <%= content_tag_for(:tr, @student_assessements) do |student_assessement| %>
        <td><%= student_assessement.assessement_date %></td>
        <td><%= link_to 'Show', student_assessement %></td>
         <td><%#= link_to 'Destroy', student_assessement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
