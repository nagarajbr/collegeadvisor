<div class="page-header">
   <%= link_to interest_profiler_path(1), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1>Recommended Occupation(s)  </h1>
</div>

<table class="table table-striped table-bordered">
        <thead>
              <tr>
              <th width="45%"> Occupation </th>
              <th width="45%"> Fits </th>
              <th width="45%"> Job Listings </th>
              <th width="45%"> Apprenticeship Listings </th>
              <th width="45%"> Training Listings </th>

            </tr>
            </thead>
          <tbody>
            <% @occupation_details_array.each do |occp| %>
              <tr>
              <td> <%= link_to occp[:title], edit_interest_profiler_path(occp[:title]) %></td>
              <td> <%= occp[:fit] %></td>
              <td> <%= link_to occp[:jobcount],job_search_path(occp[:title]) %></td>
              <td> <%= link_to occp[:apprenticecount] ,apprenticeship_path(occp[:title]) %></td>
              <td> <%= link_to occp[:trainingcount],training_path(occp[:title]) %></td>

            </tr>
          <% end %>
        </tbody>
      </table>