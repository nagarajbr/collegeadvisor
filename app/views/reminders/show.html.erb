<div class="page-header">
  <%= link_to reminders_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_reminder_path(@reminder), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show reminder</h1>
</div>

<dl class="dl-horizontal">
  <dt>Jobseeker:</dt>
  <dd><%= @reminder.jobseeker_id %></dd>

  <dt>Description:</dt>
  <dd><%= @reminder.description %></dd>

  <dt>Status:</dt>
  <dd><%= @reminder.status %></dd>

  <dt>Type:</dt>
  <dd><%= @reminder.type %></dd>

</dl>
