<%= simple_form_for @event, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :title , disabled: true , label: "Activity Type", as: :select, collection: [['Career & Technical Training','Career & Technical Training']] ,selected: 'Job Search' %>
    <%= f.input :date_range , disabled: true , label: "Activity Period" , input_html: { class: "form-control input-sm date-range-picker" } %>
    <%= f.input :name , disabled: true , label: "School Name" %>
    <%= f.input :contact , disabled: true , label: "Point of Contacted" %>
    <%= f.input :occupation_program , disabled: true , label: "Working Torwards"  %>
    <%= f.input :position_major , disabled: true , label: "Major"  %>
    <%= f.input :hours , disabled: true , label: "Planned hours per month" %>
    <%= f.input :outcome , disabled: true , label: "Outcome" %>
    <%= f.input :month_completed , label: "Month Completed", as: :select, collection: @event.month_to_complete.map{ |k,v| k if v == 'No' }  %> </div>

  <div class="form-actions">
     <%= link_to career_plan_outcomes_path, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-list-alt"></span>
          Back
        <% end %>
    <%= f.button  :submit , ( f.object.new_record? ? "Create" : "Update") %>
   
    <%= link_to 'Delete',
                @event,
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure?' },
                remote: true unless @event.new_record? %>

   
  </div>
<% end %>
