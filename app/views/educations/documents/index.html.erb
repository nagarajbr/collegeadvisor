

<fieldset>
  <section class="solidbody">

<legend> <%= set_subheader("Documents") %> </legend><br>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">

  <thead>
    <tr>
      <th> Name</th>
      <th> Action </th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= link_to 'Show', document %>
            <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <!-- <td><%#= link_to 'Edit', edit_document_path(document) %></td> -->

      </tr>
    <% end %>
  </tbody>

</table>
</div>
 <div class="page-header">
  <%= link_to new_document_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Document
  <% end %>

</div>
<br>

</section>
</fieldset>


