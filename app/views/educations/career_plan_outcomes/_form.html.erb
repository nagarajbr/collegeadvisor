<%= form_for(@career_plan_outcome, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @career_plan_outcome.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@career_plan_outcome.errors.count, "error") %> prohibited this activity from being saved:</h4>

      <ul>
      <% @career_plan_outcome.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :activity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :activity, CareerPlanOutcome.activities.keys.to_a.map { |w, v| [w.titleize, w] },:include_blank => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :start_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :planned_hours, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :planned_hours, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Status", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :completed, CareerPlanOutcome.completeds.keys.to_a.map { |w, v| [w.titleize, w] },:include_blank => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Reason (If not completed)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :reason, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :outcome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :outcome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
