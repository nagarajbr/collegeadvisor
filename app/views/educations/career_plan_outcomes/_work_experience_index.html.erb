<legend><%= set_subheader("Work Experience Activities") %> </legend> <br>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Activity Period</th>
            <th>Work site name</th>
            <th>Work site contact</th>
            <th>Occupation</th>
            <th>Position type</th>
            <th>Working hours per month</th>
            <th>Completed Status</th>
            <th>Outcome</th>
            <th>Action</th>
        <!-- <th></th>
        <th></th> -->
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @work_site_planners) do |work_site_planner| %>
            <td><%= work_site_planner.start.to_date.to_s + " To "+ (work_site_planner.end.to_date - 1.day).to_s %></td>
            <td><%= work_site_planner.name %></td>
            <td><%= work_site_planner.contact %></td>
            <td><%= work_site_planner.occupation_program %></td>
            <td><%= work_site_planner.position_major %></td>
            <td><%= work_site_planner.hours %></td>
            <td><% work_site_planner.month_to_complete.each_pair do |key, value| %>
                <%= key %> : <%= value %><br>
                <% end %></td>
            <td><%= work_site_planner.outcome %></td>
            <!-- <td><%#= link_to 'Show', work_site_planner %></td> -->
        <td><%= link_to 'Edit', edit_work_site_planner_path(work_site_planner) %></td>
        <!-- <td><%#= link_to 'Destroy', work_site_planner, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      <% end %>
    </tbody>
  </table>
</div>

  </section>
</fieldset>