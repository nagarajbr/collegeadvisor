<div class="page-header">

    <% if params["keyword"].present? %>
  <% else %>
	 <%= link_to interest_profilers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
   <% end %>

</div>

<fieldset>
  <section class="solidbody">
<% if params["keyword"].present? %>
   <legend> <%= set_subheader("Training Listings For #{params["keyword"]}") %> </legend><br>
<% else %>
   <legend> <%= set_subheader("Training Listings For #{params[:id]}") %> </legend><br>
<% end %>
<table class="table table-striped table-bordered">
        <thead>
              <tr>
              <th> SchoolName</th>
              <th> Address </th>
              <th> Phone </th>
              <th> Program Name </th>
              <th> Program Length </th>
              <th> Referral </th>
            </tr>
            </thead>
          <tbody>
            <% if !@training_listing_array.empty? %>
               <% @training_listing_array.each do |key,val| %>
                <tr>
                <td><%= key[:schoolName] %></td>
                <td> <%= key[:address] %></td>
                <td> <%= key[:phone] %></td>
                <td> <%= key[:ProgramName] %></td>
                <td> <%= key[:ProgramLength] %></td>

                <td> <%= link_to "Referral", "#" , id: "hyperlink"  %></td>
                </tr>
            <% end %>
            <% end %>
        </tbody>
      </table>
         </section>
</fieldset>