<div class="page-header">
  <%= link_to new_education_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Education
  <% end %>
  <h1>Listing educations</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>School name</th>
            <th>Attendance type</th>
            <th>Effective beg date</th>
            <th>Effective end date</th>
            <th>Major study</th>
            <th>High grade level</th>
            <th>Expected grad date</th>
            <th>Degree obtained</th>
            <th>Created by</th>
            <th>Updated by</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @educations) do |education| %>
            <td><%= education.school_name %></td>
            <td><%= education.attendance_type.titleize unless education.attendance_type.nil? %></td>
            <td><%= education.effective_beg_date %></td>
            <td><%= education.effective_end_date %></td>
            <td><%= education.major_study %></td>
            <td><%= education.high_grade_level %></td>
            <td><%= education.expected_grad_date %></td>
            <td><%= education.degree_obtained %></td>
            <td><%= education.created_by %></td>
            <td><%= education.updated_by %></td>
            <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
