<div >
  <% if params["keyword"].present? %>
  <% else %>
	 <%= link_to interest_profilers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <% end %>
</div>

<fieldset>
  <section class="solidbody">
<% if params["keyword"].present? %>
   <legend> <%= set_subheader("Job Listings For #{params["keyword"]}") %> </legend><br>
<% else %>
   <legend> <%= set_subheader("Job Listings For #{params[:id]}") %> </legend><br>
<% end %>
<table class="table table-striped table-bordered">
        <thead>
              <tr>
              <th width="45%"> Job Details</th>
              <th width="45%"> Source </th>
              <th width="45%"> Apply </th>
            </tr>
            </thead>
          <tbody>
            <% if !@job_listing_array.empty? %>
               <% @job_listing_array.each do |key,val| %>
                <tr>
                <td>
                	<h4> <%= key[:jobtitle] %></h4>
                	    <%= "#{key[:company]} - #{key[:formattedLocation]}"%> <br>
                      <%= key[:snippet] %> <br><br>
                     <%= key[:formattedRelativeTime] %>
                </td>
                <td> <%= key[:source] %></td>
                <!-- <td> <%#= link_to 'Apply', career_plan_outcomes_path(key), :method => :post %> </td> -->
                <td> <%= link_to "Apply", "#{key[:url]}" ,id: "hyperlink" ,target: :_blank %></td>

              </tr>
            <% end %>
            <% end %>
        </tbody>
      </table>

         </section>
</fieldset>