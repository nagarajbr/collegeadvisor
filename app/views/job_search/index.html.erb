<div class="page-header">
	 <%= link_to interest_profilers_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1>Job Listings</h1>
</div>

<table class="table table-striped table-bordered">
        <thead>
              <tr>
              <th width="45%"> Job Details</th>
              <th width="45%"> Source </th>
              <th width="45%"> Apply </th>
            </tr>
            </thead>
          <tbody>
            <% if !@job_listing_array.empty? %>
               <% @job_listing_array.each do |key,val| %>
                <tr>
                <td>
                	<h4> <%= key[:jobtitle] %></h4>
                	    <%= "#{key[:company]} - #{key[:formattedLocation]}"%> <br>
                      <%= key[:snippet] %> <br><br>
                     <%= key[:formattedRelativeTime] %>
                </td>
                <td> <%= key[:source] %></td>
                <td> <%= link_to "Apply", controller: "career_plan_outcomes", action: "new"  %></td>

              </tr>
            <% end %>
            <% end %>
        </tbody>
      </table>