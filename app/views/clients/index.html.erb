<div class="page-header">
 
  <%= link_to new_client_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Student
  <% end %>
 

  <h1>Students</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Middle name</th>
            <th>Suffix</th>
            <th>Dob</th>
            <th>Gender</th>
            <th></th>
            <th></th>
       
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clients) do |client| %>
            <td><%= client.first_name %></td>
            <td><%= client.last_name %></td>
            <td><%= client.middle_name %></td>
            <td><%= client.suffix %></td>
            <td><%= client.dob %></td>
            <td><%= client.gender %></td>
            <td><%= link_to 'Show', client %></td>
            <td><%= link_to 'Edit', edit_client_path(client) %></td>
            <td><%= link_to 'Select', select_student_path(client.id) %></td>
            <td><%#= link_to 'Destroy', client_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               
      <% end %>
    </tbody>
  </table>
</div>
